{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["src/index.ts", "src/types/*.ts"],
  "exclude": ["src/**/*.spec.ts", "tests/**/*.*", "examples/**/*.*"],
  "entryPointStrategy": "expand",
  "projectDocuments": ["docs/README.md", "docs/subscriber.md"],
  "outputs": [
    { "name": "markdown", "path": "docs" },
    { "name": "html", "path": "docs/_html" }
  ],
  "plugin": ["typedoc-plugin-markdown"],
  "theme": "default",
  "cleanOutputDir": true,
  "githubPages": true,
  "readme": "none",
  "gitRevision": "main",
  "tsconfig": "tsconfig.build.json"
}
